<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="24sp"
                tools:text = "@string/text_profile_title"/>
            <ImageView
                android:layout_below="@id/text_profile_title"
                android:layout_width="150sp"
                android:layout_height="280sp"
                android:id="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style = "@style/styleForTitles"
                android:layout_below="@id/text_profile_title"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_fullName_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/styleForTitles"
                android:layout_below="@id/text_profile_online"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_online"
                android:layout_toRightOf="@id/text_profile_fullName_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_bDate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_fullName"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_bDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_fullName"
                android:layout_toRightOf="@id/text_profile_bDate_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_sex_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_bDate"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_bDate"
                android:layout_toRightOf="@id/text_profile_sex_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_city_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_sex"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_sex"
                android:layout_toRightOf="@id/text_profile_sex_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_relation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_city"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_city"
                android:layout_toRightOf="@id/text_profile_relation_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_relation"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_relation"
                android:layout_toRightOf="@id/text_profile_phone_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>
            <TextView
                android:id="@+id/text_profile_university_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/text_profile_phone"
                android:layout_toRightOf="@+id/profile_photo" />
            <TextView
                android:id="@+id/text_profile_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_phone"
                android:layout_toRightOf="@id/text_profile_university_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"/>

            <TextView
                android:id="@+id/text_profile_interests_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleForTitles"
                android:layout_below="@id/profile_photo"
                android:layout_toRightOf="@+id/profile_photo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4sp"/>
            <TextView
                android:id="@+id/text_profile_interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_photo"
                android:layout_toRightOf="@id/text_profile_interests_title"
                android:layout_alignParentRight="true"
                style="@style/styleForTitles"
                android:layout_marginTop="4sp"/>
            <TextView
                android:id="@+id/text_profile_relatives_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/text_profile_interests"
                android:layout_centerHorizontal="true"
                style="@style/styleForTitles"
                android:layout_marginTop="4sp"/>
            <TextView
                android:id="@+id/list_profile"
                android:layout_below="@id/text_profile_relatives_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/styleForTitles"
                android:gravity="center">
            </TextView>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>